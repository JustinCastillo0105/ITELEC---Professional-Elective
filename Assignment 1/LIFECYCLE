// MainActivity.java
package com.example.jumpinggame;

import android.os.Bundle;
import androidx.appcompat.app.AppCompatActivity;
import android.widget.TextView;

public class MainActivity extends AppCompatActivity {

    TextView gameStatus;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        gameStatus = new TextView(this);
        gameStatus.setText("Game Created");
        setContentView(gameStatus);
    }

    @Override
    protected void onStart() {
        super.onStart();
        gameStatus.setText("Game Ready to Start");
    }

    @Override
    protected void onResume() {
        super.onResume();
        gameStatus.setText("Game Running");
    }

    @Override
    protected void onPause() {
        super.onPause();
        gameStatus.setText("Game Paused");
    }

    @Override
    protected void onStop() {
        super.onStop();
        gameStatus.setText("Game Stopped");
    }

    @Override
    protected void onDestroy() {
        super.onDestroy();
        // no UI change, since app is closed
    }
}
